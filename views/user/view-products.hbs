<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
      <div class="col-md-3 p-3">
        <div class="card d-flex flex-column" style="width: 15rem; height: 25rem;">
          <img src="/product-image/{{this._id}}.jpg" class="card-img-top w-100" style="height: 200px; object-fit: cover;" alt="...">
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
            </div>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary mt-auto  flex-column">Add to cart</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
