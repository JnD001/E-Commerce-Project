    <section>
        <div class="container">
            <div class="row mt-4">
                <div class="col d-flex justify-content-end">
                    <a href="/admin/add-product" class="btn btn-success btn-sm px-2 py-1">Add Product</a>
                </div>
            </div>
            <table class="table mt-5">
                <thead>
                    <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                        <tr>
                        <th scope="row">1</th>
                        <td>{{this.name}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.description}}</td>
                        <td><img style="width: 50px; height: 50px;" src="/product-image/{{this._id}}.jpg" alt=""></td>
                        <td>
                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are You Sure to Delete {{this.name}}')">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </section>